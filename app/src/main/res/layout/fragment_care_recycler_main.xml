<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.MyPet.Care.Container">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCareRecyclerMainTitle"
        style="@style/Theme.MyPet.Care.TextInputLayoutZero"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextCareRecyclerMainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/care_recycler_main_title_hint"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCareRecyclerMainDose"
        style="@style/Theme.MyPet.Care.TextInputLayoutZero"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCareRecyclerMainTitle"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutCareRecyclerMainTitle"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCareRecyclerMainTitle"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextCareRecyclerMainDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/care_recycler_main_dose_hint"
            android:maxLines="3" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>