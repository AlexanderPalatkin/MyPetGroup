<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.MyPet.Care.Container">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCareRecyclerNote"
        style="@style/Theme.MyPet.Care.TextInputLayoutZero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextCareRecyclerNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/care_recycler_main_note_hint"
            android:maxLines="5"
            android:minLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>