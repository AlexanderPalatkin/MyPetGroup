<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.MyPet.Care.Container.Clickable" >

    <ImageView
        android:id="@+id/imageViewCareRecyclerRepeatIcon"
        style="@style/Theme.MyPet.Care.HeaderIcon"
        android:contentDescription="@string/care_repeat_title"
        android:src="@drawable/baseline_repeat_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewCareRecyclerRepeatTitle"
        style="@style/Theme.MyPet.Care.HeaderTitle"
        android:text="@string/care_repeat_title"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCareRecyclerRepeatIcon"
        app:layout_constraintStart_toEndOf="@+id/imageViewCareRecyclerRepeatIcon"
        app:layout_constraintTop_toTopOf="@+id/imageViewCareRecyclerRepeatIcon" />

    <TextView
        android:id="@+id/textViewCareRecyclerRepeatDescription"
        style="@style/Theme.MyPet.Care.Description"
        android:text="@string/care_repeat_description_none"
        app:layout_constraintStart_toStartOf="@+id/textViewCareRecyclerRepeatTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewCareRecyclerRepeatTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCareRecyclerRepeatReset"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:icon="@drawable/baseline_close_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewCareRecyclerRepeatIcon"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>