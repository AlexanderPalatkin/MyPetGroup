<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.MyPet.ViewHolderContainer"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageViewCareRecyclerStartIcon"
        style="@style/Theme.MyPet.ViewHolderHeaderIcon"
        android:contentDescription="@string/care_start_title"
        android:src="@drawable/baseline_update_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewCareRecyclerStartTitle"
        style="@style/Theme.MyPet.ViewHolderHeaderTitle"
        android:text="@string/care_start_title"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCareRecyclerStartIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewCareRecyclerStartIcon"
        app:layout_constraintTop_toTopOf="@+id/imageViewCareRecyclerStartIcon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCareRecyclerStart"
        style="@style/Theme.MyPet.CareItemContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCareRecyclerStartIcon">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewCareRecyclerStartDate"
            style="@style/Theme.MyPet.CareTextView.Date"
            android:text="@string/care_date_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        style="@style/Theme.MyPet.CareBottomDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutCareRecyclerStart" />

</androidx.constraintlayout.widget.ConstraintLayout>