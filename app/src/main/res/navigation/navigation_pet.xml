<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_pet"
    app:startDestination="@id/pet">

    <fragment
        android:id="@+id/pet"
        android:name="com.example.mypet.ui.pet.PetFragment"
        tools:layout="@layout/fragment_pet">
        <action
            android:id="@+id/action_pet_to_food"
            app:destination="@id/food" />
        <action
            android:id="@+id/action_pet_to_petCreationFragment"
            app:destination="@id/petCreationFragment" />
    </fragment>

    <fragment
        android:id="@+id/food"
        android:name="com.example.mypet.ui.food.FoodFragment"
        android:layout="@layout/fragment_food">
        <action
            android:id="@+id/action_food_to_foodAlarm"
            app:destination="@id/navigationFoodAlarm">
            <argument
                android:name="petMyId"
                app:argType="integer" />
            <argument
                android:name="petFoodId"
                app:argType="integer" />
        </action>
    </fragment>

    <include
        android:id="@+id/navigationFoodAlarm"
        app:graph="@navigation/navigation_food_alarm" />
    <fragment
        android:id="@+id/petCreationFragment"
        android:name="com.example.mypet.ui.pet.creation.PetCreationFragment"
        android:label="fragment_pet_creation"
        tools:layout="@layout/fragment_pet_creation" />
</navigation>